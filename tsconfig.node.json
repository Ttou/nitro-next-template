{
  "extends": "nitro/tsconfig",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "~server/*": ["server/*"],
      "~shared/*": ["shared/*"],
    }
  },
  "include": [
    "scripts/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "openapi-ts.config.ts",
    "vite.config.ts"
  ]
}
